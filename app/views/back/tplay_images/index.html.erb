<h1>
  There are #<%= @tplay.id %>  images in <%= @tplay.name %>.
</h1>

<div class="body">
  <div class="upload">
    <%= form_tag back_tplay_tplay_images_path(tplay_id: @tplay), method: :post, enctype: "multipart/form-data", class: "form-horizontal" do %>
        <input type="file" name="images[]" multiple class="image-input" />
        <%= submit_tag "Upload", class: "btn btn-primary" %>
    <% end -%>
  </div>

</div>



<div>
  <table class="table table-striped">
    <tr>
      <th>Images</th>
      <th>Weight</th>
      <th></th>
    </tr>

    <% @tplay_images.each do |c| %>
        <tr>
          <td><%= image_tag c.image.url(:sub) %></td>
          <td>
            <%= form_tag back_tplay_tplay_image_path(@tplay, c), method: :put do %>
                <input type="text" value="<%= c.zhuci %>" name="zhuci" />
                <%= submit_tag "Update", class: "btn btn-default btn-xs" %>
            <% end -%>
          </td>
          <td align="right">
            <%= link_to "Delete", back_tplay_tplay_image_path(@tplay, c), method: :delete, 'data-confirm': "Are you sure?" %>
          </td>
        </tr>
    <% end -%>
  </table>

</div>
