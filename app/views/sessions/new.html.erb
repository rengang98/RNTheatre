<h1>Loging...</h1>
<%= form_tag sessions_path, method: :post, class: "form-horizontal" do %>
    <div class="form-group">
      <div class="col-lg-12">Email Address</div>
      <div class="col-lg-12">
        <%= text_field_tag :email, nil, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-12">Password</div>
      <div class="col-lg-12">
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-12">
        <div class="pull-left">
          <a href="<%= new_user_path %>">New user? Sign up now!</a>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-12">
        <input type="submit" name="sign_submit" value="login" class="col-xs-12 btn btn-primary">
      </div>
    </div>
<% end -%>
